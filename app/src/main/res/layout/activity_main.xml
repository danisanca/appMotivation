<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <LinearLayout
        android:id="@+id/linear_menu"
        android:layout_width="match_parent"
        android:background="@color/dark_purple"
        android:layout_height="wrap_content"
        android:padding="8dp">


        <ImageView
            android:id="@+id/image_all"
            android:layout_width="0dp"
            android:layout_height="32dp"
            app:tint="@color/white"
            android:layout_weight="1"
            android:src="@drawable/ic_all_incluse"
            />
        <ImageView
            android:id="@+id/image_happy"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:src="@drawable/ic_happi"
            />
        <ImageView
            android:id="@+id/image_sunny"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:src="@drawable/ic_sunny"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/text_UserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ola, Kotlin"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_below="@+id/linear_menu"
        />
    <TextView
        android:id="@+id/phrase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="21sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_centerInParent="true"
        />
    <View
        android:layout_width="192dp"
        android:layout_height="3dp"
        android:elevation="8dp"
        android:background="@color/dark_purple"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/phrase"
        />
    <Button
        android:id="@+id/button_New_Phrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/dark_purple"
        android:layout_centerInParent="true"
        android:layout_marginBottom="16dp"
        android:text="@string/new_phrase"/>

</RelativeLayout>